{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run test in workspace",
            "type": "shell",
            // -p 1 to ensure that tests are run sequentelly because we might try to bind to ports already undergoing testing
            "command": "go test -p 1 ${workspaceFolder}/...",
            "group": {
                "kind": "test",
                "isDefault": true,
            }
        },
        {
            "label": "Clean test cache",
            "type": "shell",
            "command": "go clean -testcache",
            "group": "test"
        }
    ]
}